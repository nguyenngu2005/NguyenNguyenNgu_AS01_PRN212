<Window x:Class="NguyenNguyenNguWPF.Views.AddEditCustomerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add/Edit Customer"
        WindowStartupLocation="CenterOwner"
        SizeToContent="Height" Width="450"
        FontFamily="Roboto" Foreground="White"
        ResizeMode="NoResize"

        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Window.Resources>
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#4FC3F7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="{x:Type DatePickerTextBox}">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0,0,0"/>
        </Style>

        <Style x:Key="SaveButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4FC3F7"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3DA5D9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#555"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#777"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#4FC3F7" BorderThickness="1" Background="#1E1E1E">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Height="40" Background="Transparent"
                    MouseLeftButtonDown="DragMove_Handler">
                <Grid>
                    <TextBlock Text="{Binding WindowTitle}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0" Foreground="Gray"/>
                    <Button Content="X" Width="40" Background="Transparent" BorderThickness="0"
                            Foreground="Gray" Cursor="Hand"
                            Command="{Binding CancelCommand}"
                            HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Red"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <StackPanel Grid.Row="1" Margin="20">
                <TextBlock Text="Full Name" Margin="0,0,0,5"/>
                <TextBox Style="{StaticResource ModernTextBoxStyle}"
                         Text="{Binding CurrentCustomer.CustomerFullName, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Email" Margin="0,10,0,5"/>
                <TextBox Style="{StaticResource ModernTextBoxStyle}"
                         Text="{Binding CurrentCustomer.EmailAddress, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Telephone" Margin="0,10,0,5"/>
                <TextBox Style="{StaticResource ModernTextBoxStyle}"
                         Text="{Binding CurrentCustomer.Telephone, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Password" Margin="0,10,0,5"/>
                <TextBox Style="{StaticResource ModernTextBoxStyle}"
                         Text="{Binding CurrentCustomer.Password, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Birthday" Margin="0,10,0,5"/>
                <DatePicker Style="{StaticResource ModernDatePickerStyle}"
                            SelectedDate="{Binding CurrentCustomer.CustomerBirthday, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="{Binding ErrorMessage}" Foreground="OrangeRed" Margin="0,10,0,0" TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
                <Button Content="Save" Style="{StaticResource SaveButtonStyle}"
                        Command="{Binding SaveCommand}" IsDefault="True"
                        Cursor="Hand"/>
                <Button Content="Cancel" Style="{StaticResource CancelButtonStyle}" Margin="10,0,0,0"
                        Command="{Binding CancelCommand}" IsCancel="True"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>