<UserControl x:Class="NguyenNguyenNguWPF.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="#1E1E1E" Foreground="White" FontFamily="Roboto">

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                     From="0.0" To="1.0" Duration="0:0:0.4"/>
                    <ThicknessAnimation Storyboard.TargetProperty="Margin" 
                                        From="0,20,0,0" To="0,0,0,0" 
                                        Duration="0:0:0.4"
                                        DecelerationRatio="0.9"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>

    <UserControl.Resources>
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Width" Value="220"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.3" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Dashboard Overview" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="#4FC3F7" Margin="0,0,0,20"/>

            <WrapPanel>

                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Total Customers" 
                                   FontSize="16" 
                                   Foreground="Gray" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalCustomers}" 
                                   FontSize="36" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Rooms Available" 
                                   FontSize="16" 
                                   Foreground="Gray" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding AvailableRooms}" 
                                   FontSize="36" 
                                   FontWeight="Bold" 
                                   Foreground="#8BC34A"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Rooms Booked" 
                                   FontSize="16" 
                                   Foreground="Gray" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding BookedRooms}" 
                                   FontSize="36" 
                                   FontWeight="Bold" 
                                   Foreground="#FF7043"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Total Revenue" 
                                   FontSize="16" 
                                   Foreground="Gray" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalRevenue, StringFormat=C}" 
                                   FontSize="36" 
                                   FontWeight="Bold" 
                                   Foreground="#4FC3F7"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>